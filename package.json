{
  "name": "portfolio-rod-monorepo",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run --workspaces dev",
    "build": "npm run --workspaces build",
    "start": "npm run --workspaces start",
    "lint": "npm run --workspaces lint",
    "clean": "npm run --workspaces clean",
    "web:dev": "npm run dev --workspace=apps/web",
    "web:build": "npm run build --workspace=apps/web",
    "web:start": "npm run start --workspace=apps/web",
    "db:dev": "npm run dev --workspace=apps/database",
    "db:stop": "npm run stop --workspace=apps/database",
    "db:restart": "npm run restart --workspace=apps/database",
    "db:logs": "npm run logs --workspace=apps/database",
    "db:clean": "npm run clean --workspace=apps/database",
    "db:setup": "npm run setup --workspace=apps/database"
  },
  "devDependencies": {
    "@types/node": "^22",
    "typescript": "^5"
  },
  "packageManager": "npm@10.0.0"
}
